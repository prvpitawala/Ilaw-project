{
  "name": "docnew",
  "version": "1.0.0",
  "main": "src/main.js",
  "author": {
      "name": "Raveen Pitawla",
      "email": "raveenpitawala2244@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prvpitawala/Ilaw-project.git"
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "make": "electron-builder"
  },
  "build": {
    "appId": "com.ragdoc.id",
    "productName": "Rag Doc System",
    "copyright": "Copyright Â© 2025 Lumeo Labs",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/LICENSES.chromium.html",
      "!dist/*.pak",
      "!dist/d3dcompiler_47.dll",
      "!dist/snapshot_blob.bin",
      "!dist/v8_context_snapshot.bin"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}.exe"
    }
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  }
}
